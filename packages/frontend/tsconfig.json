{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "baseUrl": "./",
    "rootDir": "./",
    "composite": true,
    "outDir": "./bin",
    "target": "esnext",
    "module": "esnext",
    "jsx": "preserve",
    "paths": {
      "~/*": ["src/*"]
    },
    "lib": ["dom", "es2015", "es2016"],
    "skipLibCheck": true
  },
  "include": ["./src/**/*.ts", "./infra/**/*.ts"],
  "exclude": ["artifacts/**/*", "dist/**/*", "public/**/*", "node_modules", "bin"]
}
